<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="real_state_invoice_order_lines" model="ir.ui.view">
        <field name="name">real_state_invoice_order_lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_real_state" string="Real State" invisible="1" />
            </xpath>

            <xpath expr="//page[@id='other_tab_entry']" position="after">
                <page string="Real State Lines" id="real_state_page">
                    <field name="real_state_line_ids" widget="one2many_list"
                        options="{'no_create': True}">
                        <tree editable="bottom" create="false" delete="false">
                            <field name="project_ids"
                                options="{'no_create': True,'no_create_edit' : True}" />
                            <field name="units_ids"
                                options="{'no_create': True,'no_create_edit' : True}" />
                            <field name="unit_price" />
                            <field name="tax_percentage" />
                        </tree>
                    </field>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="amount_untaxed" widget="monetary" />
                        <field name="amount_tax" widget="monetary" />
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="total_price" />
                        </div>
                        <field name="total_price" nolabel="1"
                            class="oe_subtotal_footer_separator" widget="monetary" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>